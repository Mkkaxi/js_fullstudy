*
  margin 0
  padding 0

html, body
  font-size 30px

section 
  margin-bottom 0.667rem
  border-radius 10px
  background-color #fff
  overflow hidden

.card
  padding 1rem
  background-color #f5fafe
  &-wrapper
    width 100%
    .user-info
      width 100%
      font-size 0
      &__pic
        width 100%
        img 
          width 100%
      &__desc
        padding 0.333rem 0.667rem
        .name
          font-size 1rem
          .sex
            width 0.67rem
            height 0.6rem
            display inline-block
            background url(./img/sexf.png) 
            background-size 100% 100%



          
